<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

    <TextView
        android:id="@+id/textview_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:singleLine="false"
        android:text="退出程序可能会停止上传位置，确定要退出吗？"
        android:textColor="@color/color_333333"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/textview_dialog_msg"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退出程序"
            android:textColor="@color/color_ff7c41"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textview_dialog_cancal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我再想想"
            android:textColor="@color/color_333333"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>